{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
	 "outDir": "./",
	 "declaration": true,
	 "declarationMap": true,
	 "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
},
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}